{
  "name": "fix-last-typo",
  "displayName": "fix-last-typo",
  "description": "Automatically fix typo before cursor.",
  "icon": "image/logo.png",
  "publisher": "awtnb",
  "repository": {
    "url": "https://github.com/AWtnb/vscode-fix-last-typo"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "typo"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fix-last-typo.execute",
        "title": "execute",
        "category": "fix-last-typo"
      }
    ],
    "configuration": {
      "title": "fix-last-typo",
      "properties": {
        "fix-last-typo.pairs": {
          "type": "array",
          "default": [
            ".,",
            ":;",
            "=~",
            "。、",
            "：；"
          ],
          "description": "Array of 2-length characters that you often typo. Characters are toggled each other, so the same letter must not appear in this array."
        }
      }
    },
    "keybindings": [
      {
        "command": "fix-last-typo.execute",
        "key": "alt+backspace",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
